{
  "testEnvironment": "jsdom",
  "clearMocks": true,
  "coverageDirectory": "<rootDir>/../../test/local-payment/coverage",
  "displayName": "local-payment",
  "restoreMocks": true,
  "//": "In the future, tests should live in the same directory as the files they are testing",
  "rootDir": "../../src/local-payment",
  "roots": ["<rootDir>", "<rootDir>/../../test/local-payment"],
  "setupFilesAfterEnv": ["<rootDir>/../../test/local-payment/unit/global.js"],
  "testMatch": ["**/unit/**/*.js", "!**/helpers/*.js", "!**/global.js"]
}
